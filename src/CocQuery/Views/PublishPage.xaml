<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CocQuery.Views.PublishPage"
             Title="PublishPage">
    <ScrollView>
        <VerticalStackLayout Spacing="20"
                             Padding="20">

            <Label Text="上传图片"
                   FontSize="16" />
            <Image x:Name="UploadedImage"
                   HeightRequest="200"
                   Aspect="AspectFit" />
            <Button Text="选择图片" />

            <Label Text="阵型链接"
                   FontSize="16" />
            <Entry x:Name="LinkEntry"
                   Placeholder="请输入链接地址" />

            <Label Text="描述"
                   FontSize="16" />
            <Editor x:Name="DescriptionEditor"
                    Placeholder="请输入描述"
                    HeightRequest="100" />
            
            <Button Text="发布" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>